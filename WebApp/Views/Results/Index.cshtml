@{
    ViewData["Title"] = "Analysis Results";
}

<div>
    <h2>Analysis Results</h2>
    <div class="wrapper">
    @if (ViewBag.JobDetails != null)
    {
        <p>Discovered the following traits in @ViewBag.JobDetails.OriginalFileName:</p>
        <p>Job duration: @((ViewBag.JobDetails.JobEndTime - ViewBag.JobDetails.JobStartTime).TotalSeconds) sec.</p>
        <ul class="analysisCategories">
        @if (ViewBag.JobDetails.Categories != null)
        {
            @foreach (var category in ViewBag.JobDetails.Categories)
            {
                <li>
                    <h3>@category</h3>
                    <p>--Place explanatory text in here--</p>
                </li>
            }
        }
        </ul>
    }
    else
    {
        <p class="errorMessage">@ViewBag.ErrorMessage</p>
    }
    </div>
</div>